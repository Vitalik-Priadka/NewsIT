<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme_Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary_First</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_First</item>
        <item name="colorAccent">@color/colorAccent_First</item>
        <item name="colorMainBackground">@color/mainBackground_First</item>
        <item name="colorMainBackgroundState">@color/mainBackgroundState_First</item>
        <item name="colorToolbarItems">@color/toolbarItems_First</item>
        <item name="colorText">@color/textColorDark</item>
        <item name="colorTextNegative">@color/textColorLite</item>
        <item name="imageItNews">@drawable/it_news_logo_lite</item>
        <item name="imageQuestionMark">@drawable/question_mark_lite</item>
        <item name="imageMenuHeader">@drawable/menu_header_background_lite</item>
        <item name="imageDefaultImage">@drawable/unload_image_dark</item>

        <item name="android:textColor">@color/textColorDark</item>
        <item name="android:colorControlNormal">@color/colorWhite</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="AppTheme_Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary_Second</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_Second</item>
        <item name="colorAccent">@color/colorAccent_Second</item>
        <item name="colorMainBackground">@color/mainBackground_Second</item>
        <item name="colorMainBackgroundState">@color/mainBackgroundState_Second</item>
        <item name="colorToolbarItems">@color/toolbarItems_Second</item>
        <item name="colorText">@color/textColorLite</item>
        <item name="colorTextNegative">@color/textColorDark</item>
        <item name="imageItNews">@drawable/it_news_logo_black</item>
        <item name="imageQuestionMark">@drawable/question_mark_black</item>
        <item name="imageMenuHeader">@drawable/menu_header_background_dark</item>
        <item name="imageDefaultImage">@drawable/unload_image_lite</item>

        <item name="android:textColor">@color/textColorLite</item>
        <item name="android:colorControlNormal">@color/textColorDark</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="AppTheme_DeepBlue" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary_Third</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_Third</item>
        <item name="colorAccent">@color/colorAccent_Third</item>
        <item name="colorMainBackground">@color/mainBackground_Third</item>
        <item name="colorMainBackgroundState">@color/mainBackgroundState_Third</item>
        <item name="colorToolbarItems">@color/toolbarItems_Third</item>
        <item name="colorText">@color/textColorLite</item>
        <item name="colorTextNegative">@color/textColorDark</item>
        <item name="imageItNews">@drawable/it_news_logo_blue</item>
        <item name="imageQuestionMark">@drawable/question_mark_blue</item>
        <item name="imageMenuHeader">@drawable/menu_header_background_blue</item>
        <item name="imageDefaultImage">@drawable/unload_image_lite</item>

        <item name="android:textColor">@color/textColorLite</item>
        <item name="android:colorControlNormal">@color/textColorDark</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="TextStyleSmall">
        <item name="android:textSize">13sp</item>
    </style>
    <style name="TextStyleMedium">
        <item name="android:textSize">15sp</item>
    </style>
    <style name="TextStyleBig">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="TextStyleExtraBig">
        <item name="android:textSize">30sp</item>
    </style>
</resources>
